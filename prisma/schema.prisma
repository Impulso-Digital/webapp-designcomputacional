generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      String   @default("Aluno")  // Valores: "Professor", "Monitor", "Aluno" - nao vai ser implementado no checkpoint 2
  createdAt DateTime @default(now())

  // Relação com o modelo Projeto
  projetos  Projeto[] @relation("UserProjetos")  // Relacionamento com projetos
}

model Projeto {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String
  codigo    String
  userId    Int      // Relacionamento com o usuário 
  user      User     @relation("UserProjetos", fields: [userId], references: [id])  // Relacionamento com o modelo User
}

