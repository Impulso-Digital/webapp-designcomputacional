<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projetos - Design Computacional</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>Projetos - Design Computacional</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Código</th>
                <th>Usuário</th>
            </tr>
        </thead>
        <tbody>
            <% projetos.forEach(function(projeto) { %>
                <tr>
                    <td><%= projeto.id %></td>
                    <td><%= projeto.nome %></td>
                    <td><%= projeto.descricao %></td>
                    <td><%= projeto.codigo %></td>
                    <td><%= projeto.user.nome %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
